<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_app_bar_contents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_collapseMode="parallax"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/naegong_appicon" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

           <Button
               android:id="@+id/kakao_login"
               android:layout_width="270dp"
               android:layout_height="50dp"
               android:background="@drawable/image_border"
               android:gravity="center_horizontal"
               android:text = "카카오로 시작하기"
               android:textSize="14dp"
               android:paddingTop="15dp"
               android:textColor="#000000"
               android:textStyle="normal"
               />

           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/kakao_account_logo"
               android:layout_centerVertical="true"
               android:layout_marginLeft="14dp"/>


            <com.kakao.usermgmt.LoginButton
                android:id="@+id/btn_kakao_login"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/naver_login"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:background="@drawable/image_border"
                android:gravity="center_horizontal"
                android:text = "네이버로 시작하기"
                android:textSize="14dp"
                android:paddingTop="15dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/naver_icon"
                android:layout_centerVertical="true"
                android:layout_marginTop="46dp"
                android:layout_marginLeft="14dp"
                />

        </RelativeLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>