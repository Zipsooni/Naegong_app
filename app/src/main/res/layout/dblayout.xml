<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_app_bar_contents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    app:layout_collapseMode="parallax"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal">



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/dbaddRoom"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="26dp"
            android:src="@drawable/addbtn"
            app:backgroundTint="#79A7FF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="900dp">

                <ImageView
                    android:id="@+id/dbimg"
                    android:layout_width="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_height="270dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/debateimg" />

                <TextView
                    android:id="@+id/dbcopy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "SHARE YOUR OPINION"
                    android:layout_below="@+id/dbimg"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/typo"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/dbcopy"
                    android:background= "@drawable/search"
                    />

                <EditText
                    android:id="@+id/dbtag"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/dbcopy"
                    android:hint="#태그검색"
                    android:textSize="16dp"
                    android:fontFamily="@font/typo"
                    android:background="@android:color/transparent"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/dbtag">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dbroom1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/roompic"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dbroom1"
                        android:text = "#토익스피킹"
                        android:fontFamily="@font/typo"
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/black"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dbroom2"
                        android:layout_toRightOf="@+id/dbroom1"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="32dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp"
                        android:src="@drawable/roompic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dbroom2"
                        android:layout_marginLeft="138dp"
                        android:fontFamily="@font/typo"
                        android:text="#독서토론방"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="7dp"
                        android:textSize="13dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dbroom3"
                        android:layout_marginTop="32dp"
                        android:layout_toRightOf="@+id/dbroom2"
                        android:layout_marginLeft="38dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp"
                        android:src="@drawable/roompic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dbroom3"
                        android:text = "#OPIC AL레벨"
                        android:fontFamily="@font/typo"
                        android:textSize="13dp"
                        android:layout_marginLeft="277dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/black"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dbroom4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/dbroom3"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/roompic"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dbroom4"
                        android:text = "#공무원면접"
                        android:fontFamily="@font/typo"
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/black"
                        />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dbroom5"
                        android:layout_below="@+id/dbroom2"
                        android:layout_marginTop="32dp"
                        android:layout_toRightOf="@+id/dbroom4"
                        android:layout_marginLeft="38dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp"
                        android:src="@drawable/roompic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dbroom5"
                        android:text = "#오픽 IH레벨"
                        android:fontFamily="@font/typo"
                        android:textSize="13dp"
                        android:layout_marginLeft="138dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/black"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dbroom6"
                        android:layout_below="@+id/dbroom3"
                        android:layout_marginTop="32dp"
                        android:layout_toRightOf="@+id/dbroom5"
                        android:layout_marginLeft="38dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp"
                        android:src="@drawable/roompic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dbroom6"
                        android:text = "#취업 스터디"
                        android:fontFamily="@font/typo"
                        android:textSize="13dp"
                        android:layout_marginLeft="277dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/black"
                        />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>