<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1EE4E4E4"
        >


        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/anonymous"
                android:layout_marginLeft="30dp"
                />

                <TextView
                    android:layout_toRightOf="@+id/profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NickName"
                    android:fontFamily="@font/typo"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/nickname_txt"
                    android:textSize="8pt"/>

                <TextView
                    android:fontFamily="@font/typo"
                    android:layout_toRightOf="@+id/profile_img"
                    android:layout_below="@+id/nickname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="5pt"
                    android:layout_marginLeft="20dp"
                    android:text="ID : minvely42@naver.com"
                    android:id="@+id/profile_txt"/>

                <ImageView
                    android:id="@+id/account_info"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/right_arrow"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="55dp"/>

            <LinearLayout
                android:id="@+id/notice"
                android:background="@drawable/setting_deco"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingVertical="10dp"
                android:layout_below="@+id/profile_img">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/noti_img"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/bell"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:fontFamily="@font/typo"
                    android:textSize="7pt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/notice_txt"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/camera_setting"
                android:background="@drawable/setting_deco2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingVertical="10dp"
                android:layout_below="@+id/notice">

                <ImageView
                    android:id="@+id/camset_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/profile_pic"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/cam_set"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카메라설정"
                    android:fontFamily="@font/typo"
                    android:textSize="7pt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/cameraset_txt"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/notification"
                android:background="@drawable/setting_deco2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingVertical="10dp"
                android:layout_below="@+id/camera_setting">

                <ImageView
                    android:id="@+id/notification_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/profile_pic"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/notificationimg"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림설정"
                    android:fontFamily="@font/typo"
                    android:textSize="7pt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/notification_txt"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/customerservice"
                android:background="@drawable/setting_deco2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingVertical="10dp"
                android:layout_below="@+id/notification">

                <ImageView
                    android:id="@+id/csservice_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/profile_pic"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/support"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:fontFamily="@font/typo"
                    android:textSize="7pt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/csservice_txt"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/currentversion"
                android:background="@drawable/setting_deco2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingVertical="10dp"
                android:layout_below="@+id/customerservice">

                <ImageView
                    android:id="@+id/current_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/profile_pic"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/time"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 버전 1.0.0"
                    android:fontFamily="@font/typo"
                    android:textSize="7pt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/current_txt"/>

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/logout"
                    android:background="@drawable/setting_deco2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingVertical="10dp"
                    android:layout_below="@+id/currentversion">

                    <ImageView
                        android:id="@+id/logout_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/profile_pic"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/logoutimg"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:fontFamily="@font/typo"
                        android:textSize="7pt"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/logout_txt"/>

                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:text = "Copyright 2020. ZipSooni. All Rights Reserved."
            android:fontFamily="@font/typo"
            android:textColor="#DF9C9C9C"
            android:textSize="9dp"
            android:layout_marginTop="10dp"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>